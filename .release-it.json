{
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "git": {
        "commitMessage": "chore: release ${version}",
        "tagName": "${version}"
    },
    "github": {
        "release": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}
